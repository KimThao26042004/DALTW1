@model PagedList.PagedList<WebBanHangOnline.Models.EF.Wishlist>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    .pagination {
        display: inline-flex;
        list-style: none;
        padding-left: 0;
        margin: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                color: #007bff;
                text-decoration: none;
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                background-color: #f8f9fa;
                font-size: 14px;
            }

                .pagination li a:hover {
                    background-color: #007bff;
                    color: #fff;
                    border-color: #007bff;
                }

        .pagination .disabled a {
            color: #6c757d;
            border-color: #ddd;
            cursor: not-allowed;
        }

        .pagination .active a {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news"> Sản phẩm yêu thích</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Product.Title"><img src="@item.Product.Image" alt="@item.Product.Title" /></a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="content-box">
                        <h3><a href="/chi-tiet/@item.Product.Alias-p@(item.ProductId)" title="@item.Product.Title">@item.Product.Title</a></h3>
                        <div class="description-box">
                            @item.Product.Description
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <a href="#" data-id="@item.Id" class="btn btn-danger">Xóa</a>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </ul>
            </div>
        </div>

    }

</div>
